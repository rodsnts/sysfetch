  "keywords": [
    "cli",
    "node",
    "react",
    "hardware",
    "cpu",
    "gpu",
    "memory",
    "amd",
    "intel",
    "nvidia",
    "ram",
    "temperature",
    "sys"
  ],
  "author": "Rodrigo Santos",
  "bugs": {
    "url": "https://github.com/rodsnts/sysfetch/issues"
  },
  "homepage": "https://github.com/rodsnts/sysfetch#readme"
